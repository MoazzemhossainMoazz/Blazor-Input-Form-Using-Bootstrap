@* Shared/NavMenu.razor *@
<nav class="sidebar">
    <NavLink href="/" class="nav-link" active-class="active">🏠 Home</NavLink>

    <div class="menu-item">
        <a href="#" @onclick="ToggleAbout">📄 About ▾</a>
        <div class="submenu" style="@(isAboutOpen ? "display:block;" : "display:none;")">
            <NavLink href="/our-team" class="nav-link">Our Team</NavLink>
            <NavLink href="/our-history" class="nav-link">Our History</NavLink>
            <NavLink href="/our-mission" class="nav-link">Our Mission</NavLink>
        </div>
    </div>

    <div class="menu-item">
        <a href="#" @onclick="ToggleServices">🛠 Services ▾</a>
        <div class="submenu" style="@(isServicesOpen ? "display:block;" : "display:none;")">
            <NavLink href="/web-development" class="nav-link">Web Development</NavLink>
            <NavLink href="/app-development" class="nav-link">App Development</NavLink>
            <NavLink href="/seo" class="nav-link">SEO Services</NavLink>
        </div>
    </div>

    <NavLink href="/contact" class="nav-link" active-class="active">📞 Contact</NavLink>
</nav>

@code {
    private bool isAboutOpen = false;
    private bool isServicesOpen = false;

    private void ToggleAbout()
    {
        isAboutOpen = !isAboutOpen;
    }

    private void ToggleServices()
    {
        isServicesOpen = !isServicesOpen;
    }
}
